<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <InvariantGlobalization>true</InvariantGlobalization>
    <PublishTrimmed>false</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
    <!-- You can remove System.Data.Odbc if youâ€™re no longer using ODBC -->
    <!-- <PackageReference Include="System.Data.Odbc" Version="8.0.0" /> -->
  </ItemGroup>

  <ItemGroup>
    <!-- Reference the HANA .NET 8 provider that is actually present under srv/hdbclient-linux -->
    <Reference Include="Sap.Data.Hana.Net.v8.0">
      <HintPath>hdbclient-linux/dotnetcore/v8.0/Sap.Data.Hana.Net.v8.0.dll</HintPath>
      <Private>true</Private>
    </Reference>

    <!-- Ship all HANA client files with the app -->
    <None Include="hdbclient-linux/**" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>
</Project>
